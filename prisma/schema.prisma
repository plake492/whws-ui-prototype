generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Only needed when using a cloud-hosted database
  schemas           = ["public"]
}

model Community {
  id          String              @id @default(uuid())
  name        String
  slug        String              @unique
  description String?
  coverImage  String?
  tags        String[]            @default([])
  posts       Post[]
  members     CommunityMember[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@schema("public")
}

model CommunityMember {
  id          String    @id @default(uuid())
  userId      String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  joinedAt    DateTime  @default(now())

  @@unique([userId, communityId])
  @@schema("public")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String
  authorId    String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@schema("public")
}

model Sponsor {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  logoUrl      String
  heroImageUrl String?
  description  Json
  shortBio     String   @db.VarChar(200)
  category     String
  healthFocus  String[]
  isFeatured   Boolean  @default(false)
  displayOrder Int      @default(0)
  website      String?
  phone        String?
  email        String?
  address      String?
  facebook     String?
  instagram    String?
  twitter      String?
  linkedin     String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  offers       Offer[]

  @@index([slug])
  @@index([category])
  @@index([isFeatured, displayOrder])
  @@schema("public")
}

model Offer {
  id                 String              @id @default(uuid())
  sponsorId          String
  sponsor            Sponsor             @relation(fields: [sponsorId], references: [id], onDelete: Cascade)
  title              String
  description        String              @db.Text
  discountDetails    String
  termsConditions    String              @db.Text
  qrCodeData         String?             @db.Text
  qrCodeImage        String?             @db.Text
  validFrom          DateTime            @default(now())
  validUntil         DateTime?
  totalLimit         Int?
  perUserLimit       Int                 @default(1)
  currentRedemptions Int                 @default(0)
  imageUrl           String?
  isActive           Boolean             @default(true)
  isFeatured         Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  redemptions        OfferRedemption[]
  savedBy            UserSavedOffer[]

  @@index([sponsorId])
  @@index([validFrom, validUntil])
  @@index([isActive, isFeatured])
  @@schema("public")
}

model OfferRedemption {
  id               String    @id @default(uuid())
  offerId          String
  offer            Offer     @relation(fields: [offerId], references: [id], onDelete: Cascade)
  userId           String
  redeemedAt       DateTime  @default(now())
  qrCodeData       String?   @db.Text
  redemptionMethod String    @default("qr_code")
  isVerified       Boolean   @default(false)
  verifiedBy       String?
  verifiedAt       DateTime?
  latitude         Float?
  longitude        Float?
  ipAddress        String?
  notes            String?   @db.Text

  @@unique([offerId, userId])
  @@index([offerId])
  @@index([userId])
  @@index([redeemedAt])
  @@schema("public")
}

model UserSavedOffer {
  id      String   @id @default(uuid())
  userId  String
  offerId String
  offer   Offer    @relation(fields: [offerId], references: [id], onDelete: Cascade)
  savedAt DateTime @default(now())

  @@unique([userId, offerId])
  @@index([userId])
  @@index([offerId])
  @@schema("public")
}