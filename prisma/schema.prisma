generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Only needed when using a cloud-hosted database
  schemas           = ["public"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?

  // NEW: Consent & Privacy Flags
  aiLearningConsent    Boolean  @default(false)  // Consent to use data for AI training
  showInChannelOnly    Boolean  @default(false)  // Only show activity in channel, not feeds

  // Existing fields
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Existing relations
  posts       Post[]

  // NEW: Comment relations
  comments    Comment[]
  commentHearts CommentHeart[]

  @@map("users")
  @@schema("public")
}

model Community {
  id          String              @id @default(uuid())
  name        String
  slug        String              @unique
  description String?
  coverImage  String?
  tags        String[]            @default([])
  posts       Post[]
  members     CommunityMember[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@schema("public")
}

model CommunityMember {
  id          String    @id @default(uuid())
  userId      String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  joinedAt    DateTime  @default(now())

  @@unique([userId, communityId])
  @@schema("public")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // NEW: Comments relation
  comments  Comment[]
  commentCount Int @default(0) // Denormalized for performance

  @@schema("public")
}

model Comment {
  id        String   @id @default(uuid())

  // Content
  content   String   @db.Text

  // Relations
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Nesting (one level)
  parentId  String?  // null = top-level comment
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  // Engagement
  hearts    CommentHeart[]
  heartCount Int     @default(0) // Denormalized for performance

  // Moderation
  isEdited  Boolean  @default(false)
  editedAt  DateTime?
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  // Meta
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId, createdAt])
  @@index([authorId])
  @@index([parentId])
  @@index([postId, parentId]) // For fetching top-level comments
  @@map("comments")
  @@schema("public")
}

model CommentHeart {
  id        String   @id @default(uuid())

  // Relations
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Meta
  createdAt DateTime @default(now())

  // Prevent duplicate hearts from same user
  @@unique([commentId, userId])
  @@index([commentId])
  @@index([userId])
  @@map("comment_hearts")
  @@schema("public")
}

model Sponsor {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  logoUrl      String
  heroImageUrl String?
  description  Json
  shortBio     String   @db.VarChar(200)
  category     String
  healthFocus  String[]
  isFeatured   Boolean  @default(false)
  displayOrder Int      @default(0)
  website      String?
  phone        String?
  email        String?
  address      String?
  facebook     String?
  instagram    String?
  twitter      String?
  linkedin     String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  offers       Offer[]

  @@index([slug])
  @@index([category])
  @@index([isFeatured, displayOrder])
  @@schema("public")
}

model Offer {
  id                 String              @id @default(uuid())
  sponsorId          String
  sponsor            Sponsor             @relation(fields: [sponsorId], references: [id], onDelete: Cascade)
  title              String
  description        String              @db.Text
  discountDetails    String
  termsConditions    String              @db.Text
  qrCodeData         String?             @db.Text
  qrCodeImage        String?             @db.Text
  validFrom          DateTime            @default(now())
  validUntil         DateTime?
  totalLimit         Int?
  perUserLimit       Int                 @default(1)
  currentRedemptions Int                 @default(0)
  imageUrl           String?
  isActive           Boolean             @default(true)
  isFeatured         Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  redemptions        OfferRedemption[]
  savedBy            UserSavedOffer[]

  @@index([sponsorId])
  @@index([validFrom, validUntil])
  @@index([isActive, isFeatured])
  @@schema("public")
}

model OfferRedemption {
  id               String    @id @default(uuid())
  offerId          String
  offer            Offer     @relation(fields: [offerId], references: [id], onDelete: Cascade)
  userId           String
  redeemedAt       DateTime  @default(now())
  qrCodeData       String?   @db.Text
  redemptionMethod String    @default("qr_code")
  isVerified       Boolean   @default(false)
  verifiedBy       String?
  verifiedAt       DateTime?
  latitude         Float?
  longitude        Float?
  ipAddress        String?
  notes            String?   @db.Text

  @@unique([offerId, userId])
  @@index([offerId])
  @@index([userId])
  @@index([redeemedAt])
  @@schema("public")
}

model UserSavedOffer {
  id      String   @id @default(uuid())
  userId  String
  offerId String
  offer   Offer    @relation(fields: [offerId], references: [id], onDelete: Cascade)
  savedAt DateTime @default(now())

  @@unique([userId, offerId])
  @@index([userId])
  @@index([offerId])
  @@schema("public")
}
