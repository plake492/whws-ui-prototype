generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Only needed when using a cloud-hosted database
  schemas           = ["public"]
}

model Community {
  id          String              @id @default(uuid())
  name        String
  slug        String              @unique
  description String?
  coverImage  String?
  tags        String[]            @default([])
  posts       Post[]
  members     CommunityMember[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@schema("public")
}

model CommunityMember {
  id          String    @id @default(uuid())
  userId      String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  joinedAt    DateTime  @default(now())

  @@unique([userId, communityId])
  @@schema("public")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String
  authorId    String
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@schema("public")
}