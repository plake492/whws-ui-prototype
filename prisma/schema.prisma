generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model Community {
  id          String            @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  coverImage  String?
  slug        String            @unique
  tags        String[]          @default([])
  media       String?
  memberCount Decimal?          @db.Decimal @map("members")
  members     CommunityMember[]
  posts       Post[]

  @@schema("public")
}

model CommunityMember {
  id          String    @id @default(uuid())
  userId      String
  communityId String
  joinedAt    DateTime  @default(now())
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@unique([userId, communityId])
  @@schema("public")
}

model Post {
  id           String     @id @default(uuid())
  title        String
  content      String
  authorId     String
  communityId  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  commentCount Int        @default(0)
  users        users      @relation(fields: [authorId], references: [id])
  community    Community  @relation(fields: [communityId], references: [id], onDelete: Cascade)
  comments     comments[]

  @@schema("public")
}

model Sponsor {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  logoUrl      String
  heroImageUrl String?
  description  Json
  shortBio     String   @db.VarChar(200)
  category     String
  healthFocus  String[]
  isFeatured   Boolean  @default(false)
  displayOrder Int      @default(0)
  website      String?
  phone        String?
  email        String?
  address      String?
  facebook     String?
  instagram    String?
  twitter      String?
  linkedin     String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  offers       Offer[]

  @@index([slug])
  @@index([category])
  @@index([isFeatured, displayOrder])
  @@schema("public")
}

model Offer {
  id                 String            @id @default(uuid())
  sponsorId          String
  title              String
  description        String
  discountDetails    String
  termsConditions    String
  qrCodeData         String?
  qrCodeImage        String?
  validFrom          DateTime          @default(now())
  validUntil         DateTime?
  totalLimit         Int?
  perUserLimit       Int               @default(1)
  currentRedemptions Int               @default(0)
  imageUrl           String?
  isActive           Boolean           @default(true)
  isFeatured         Boolean           @default(false)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  sponsor            Sponsor           @relation(fields: [sponsorId], references: [id], onDelete: Cascade)
  redemptions        OfferRedemption[]
  savedBy            UserSavedOffer[]

  @@index([sponsorId])
  @@index([validFrom, validUntil])
  @@index([isActive, isFeatured])
  @@schema("public")
}

model OfferRedemption {
  id               String    @id @default(uuid())
  offerId          String
  userId           String
  redeemedAt       DateTime  @default(now())
  qrCodeData       String?
  redemptionMethod String    @default("qr_code")
  isVerified       Boolean   @default(false)
  verifiedBy       String?
  verifiedAt       DateTime?
  latitude         Float?
  longitude        Float?
  ipAddress        String?
  notes            String?
  offer            Offer     @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@unique([offerId, userId])
  @@index([offerId])
  @@index([userId])
  @@index([redeemedAt])
  @@schema("public")
}

model UserSavedOffer {
  id      String   @id @default(uuid())
  userId  String
  offerId String
  savedAt DateTime @default(now())
  offer   Offer    @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@unique([userId, offerId])
  @@index([userId])
  @@index([offerId])
  @@schema("public")
}

model comment_hearts {
  id        String   @id
  commentId String
  userId    String
  createdAt DateTime @default(now())
  comments  comments @relation(fields: [commentId], references: [id], onDelete: Cascade)
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@index([commentId])
  @@index([userId])
  @@schema("public")
}

model comments {
  id             String           @id
  content        String
  postId         String
  authorId       String
  parentId       String?
  heartCount     Int              @default(0)
  isEdited       Boolean          @default(false)
  editedAt       DateTime?
  isDeleted      Boolean          @default(false)
  deletedAt      DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  comment_hearts comment_hearts[]
  users          users            @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments       comments?        @relation("commentsTocomments", fields: [parentId], references: [id], onDelete: Cascade)
  other_comments comments[]       @relation("commentsTocomments")
  Post           Post             @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([parentId])
  @@index([postId, createdAt])
  @@index([postId, parentId])
  @@schema("public")
}

model users {
  id                String           @id
  email             String           @unique
  name              String?
  avatarUrl         String?
  aiLearningConsent Boolean          @default(false)
  showInChannelOnly Boolean          @default(false)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime
  Post              Post[]
  comment_hearts    comment_hearts[]
  comments          comments[]

  @@schema("public")
}
